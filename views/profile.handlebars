<div class="container blog-entry pt-3">
          <div class="card">
            <div
              class="card-header d-flex justify-content-between align-items-center"
            >
              <h5 class="post-info py-1">Welcome, {{username}}!</h5>
              <p class="p-0 m-0 text-black-50">Dashboard</p>
            </div>

            <div class="card-body pt-5">
              <p class="lead"><span class="h4">Username:</span> {{username}}</p>
              <p class="lead"><span class="h4">Email:</span> {{email}}</p>
            </div>

            <div class="card-body pt-1 pb-5">
              <h5 class="card-text display-7 post-text pb-2">Your Posts:</h5>
              <hr class="py-1 bg-secondary rounded-pill" />
              <div class="row pt-3">

                {{#if userPosts.length}}  
                {{#each userPosts as |post|}}
                <div class="col-sm-6">
                  <div class="card">
                    <div class="card-body">
                      <h5 class="card-title" id="post-title">{{post.title}}</h5>
                      <p class="text-muted p-0">Posted {{format_date post.date_created}}</p>
                      <p class="card-text" id="post-body">
                        {{post.text}}
                      </p>
                      <a
                        href="#"
                        id="edit-modal"
                        class="edit-modal btn btn-primary"
                        data-bs-toggle="modal"
                        data-bs-target="#staticBackdropUpdatePost"
                        data-id="{{post.id}}"
                        onclick=""
                        >Edit</a
                      >
                      {{!-- <a href="/profile" class="btn btn-primary" id="delete-btn" data-id="{{post.id}}">Delete</a> --}}
                      <button href="#" type="submit" class="delete-btn btn btn-primary post-text" id="delete-btn" data-id="{{post.id}}">Delete</button>
                    </div>
                  </div>
                </div>

                {{/each}}
                {{else}}
                <p class="lead">No posts to display.</p>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
        