{{#each blogposts as |post| }}
<div class="container blog-entry pt-3">
  <div class="card">
    <div class="card-header">
      <h5 class="post-info py-1">{{post.title}}</h5>
    </div>

    <div class="card-body">
      <p class="card-text post-text">
        {{post.text}}
      </p>
    </div>

    <div class="card-footer d-flex align-items-center justify-content-end">
      <p class="post-info post-text">
                Posted by {{post.user.username}} on {{format_date post.date_created}}
      </p>
      {{#unless logged_in}}
      <a
                href="#"
                id="comment-modal"
                class="comment-modal btn btn-primary btn-sm post-text"
                data-post-id="{{post.id}}"
                data-bs-toggle="modal"
                data-bs-target="#staticBackdropNewComment"
                >Add Comment</a
      >
      {{/unless}}
    </div>
  </div>
  {{#if postComments.length}}
  {{#each comments as |comment|}}
  <div class="card">
    <div class="card-body">
      <div class="card-text post-text">
        <p>Comment Here</p>
      </div>
    </div>
  </div>
  {{/each}}
  {{/if}}
</div>
{{/each}}